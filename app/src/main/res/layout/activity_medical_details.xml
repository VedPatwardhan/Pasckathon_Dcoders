<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicalDetailsActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="360dp"
                android:layout_marginRight="18dp"
                android:text="Select the disease you are suffering from"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinnerDisease"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="18dp"
                android:entries="@array/diseases" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="18dp"
                android:text="Select the severity of the disease"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarDisease"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="18dp"
                android:max="3" />

            <Button
                android:id="@+id/buttonDisease"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="18dp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>